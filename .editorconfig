root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,cjs,mjs}]
indent_size = 3
indent_style = tab

[*.json]
indent_size = 2
indent_style = tab

[*.{yml,yaml}]
indent_size = 2
indent_style = space

[*.md]
trim_trailing_whitespace = false
